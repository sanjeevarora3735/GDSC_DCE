<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDSCDCE" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Google_Blue</item>
        <item name="colorPrimaryVariant">@color/Google_Green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CD4385F5</item>
        <item name="colorSecondaryVariant">#BC33A856</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GDSCDCE.GetStarted" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">100000</item>
    </style>
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/Google_Green</item>
        <item name="colorControlActivated">@color/Google_Green</item>
        <item name="colorControlHighlight">@color/Google_Green</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.EventsPoster" parent="">
        <item name="cornerSize">5dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.ProjectUser" parent="">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.HackathonThemes" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ProjectPosterImage" parent="">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.LeaderBordChance" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:padding">50dp</item>
    </style>
    <style name="Theme.GDSCDCE.GetStarted.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GDSCDCE.GetStarted.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GDSCDCE.GetStarted.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>